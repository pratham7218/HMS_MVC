@model List<WebApplication1.Appointment>

@{
    ViewBag.Title = "ShowAllAppointments";
}

<br />
<br />


<style>
    body {
        background-image: url('/Scripts/Images/Doctor.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>



    <div style="margin-top:-1rem">
        <form action="ShowAllAppointments">
            <p class="labelColorWhite">Select Date</p>
            <input type="date" name="date1" id="inputDate" />
            <input type="submit" value="Search" />
            <hr />
        </form>
    </div>
    <h2 style="color:chocolate;padding-left:1rem" class="bg-warning">All Appointments</h2>

    <table class="table-bordered table table-hover">
        <thead class="WhiteHeader">
            <tr>
                <th>
                    <label>Appointment Id</label>
                </th>

                <th>
                    <label>Patient Id</label>
                </th>

                <th>
                    <label>Appointment Date</label>
                </th>

                <th>
                    <label>Appointment Time</label>
                </th>
            </tr>
        </thead>

        <tbody style="color:white" class="TableBody">
            @foreach (var item in Model)
            {
                <tr class="labelColorWhite">
                    <td>@Html.DisplayFor(a => item.appointment_id)</td>

                    <td>@Html.DisplayFor(a => item.patient_id)</td>

                    <td>@item.appointmentDate.Value.ToShortDateString()</td>

                    <td>@Html.DisplayFor(a => item.appointmentTime)</td>

                </tr>

            }
        </tbody>

    </table>

    <div style="margin-top:2rem">
        @Html.ActionLink("Back", "Index", "", new { @class = "ActionLinks" })
    </div>
@*}*@

