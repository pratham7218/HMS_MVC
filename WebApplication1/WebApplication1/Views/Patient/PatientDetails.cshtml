@model WebApplication1.Patient

@{
    ViewBag.Title = "PatientDetails";
}

<style>
    body {
        background-image: url('/Scripts/Images/Patient.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


    <h2 class="labelColorWhite">Personal Details</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
            <div style="margin-left:0.25rem" >
                <span class="labelColorWhite">Choose desease category</span>
                <select name="deseaseCategory" style="margin-left:2rem">
                    <option value="Heart">Heart</option>
                    <option value="Cancer">Cancer</option>
                    <option value="Ortho">Ortho</option>
                    <option value="">Not Sure</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <div class="labelColorWhite">
                    @Html.LabelFor(model => model.prev_history, "Previous History", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.prev_history, new { htmlAttributes = new { @class = "form-control ", @placeholder = "Put N/A if not applicable" } })
                    @Html.ValidationMessageFor(model => model.prev_history, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="labelColorWhite">
                    @Html.LabelFor(model => model.reports, "Reports", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.reports, new { htmlAttributes = new { @class = "form-control",@placeholder="Put N/A if not applicable" } })
                    @Html.ValidationMessageFor(model => model.reports, "", new { @class = "text-danger" })
                </div>
            </div>

      

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Index", "", new { @class = "ActionLinks" })
    </div>

